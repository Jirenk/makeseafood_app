/**recommended.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

/* 标题区域 */
.title-area {
  background-color: #3b82f6;
  color: white;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 42rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #e0edff;
  font-weight: 400;
}

/* 过滤栏 */
.filter-bar {
  background-color: white;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.filter-buttons {
  display: flex;
  gap: 16rpx;
}

.filter-button {
  font-size: 28rpx;
  padding: 8rpx 24rpx;
  background-color: #f3f4f6;
  color: #4b5563;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  font-weight: 400;
}

.filter-active {
  background-color: #3b82f6;
  color: white;
}

.down-icon {
  font-size: 20rpx;
  margin-left: 8rpx;
}

.season-selector {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #4b5563;
}

.season-label {
  margin-right: 8rpx;
}

.season-picker {
  color: #3b82f6;
  font-weight: 500;
}

/* 海鲜列表 */
.seafood-list {
  flex: 1;
  overflow-y: auto;
}

.seafood-item {
  background-color: white;
  padding: 32rpx;
  border-bottom: 2rpx solid #f3f4f6;
}

.seafood-header {
  display: flex;
  margin-bottom: 24rpx;
}

.seafood-image {
  width: 152rpx;
  height: 152rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

.seafood-info {
  margin-left: 32rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.seafood-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4rpx;
}

.seafood-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.2;
}

.seafood-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  background-color: #3b82f6;
  color: white;
  border-radius: 9999rpx;
  font-weight: 400;
}

.seafood-desc {
  font-size: 28rpx;
  color: #6b7280;
  margin-top: 8rpx;
  display: block;
  line-height: 1.4;
}

.seafood-season {
  margin-top: 12rpx;
}

.season-text {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  background-color: #EBF5FF;
  color: #3b82f6;
  border-radius: 9999rpx;
  font-weight: 400;
}

.seafood-content {
  border-top: 2rpx solid #f3f4f6;
  padding-top: 24rpx;
}

.seafood-detail {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.5;
  margin-bottom: 24rpx;
  display: block;
  font-weight: 400;
}

.recipe-button {
  background-color: #3b82f6;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-radius: 16rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 500;
  line-height: 1.5;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  border: none;
}

.arrow-icon {
  font-size: 24rpx;
  margin-left: 8rpx;
}

/* 底部导航栏 */
.tabbar {
  height: 136rpx;
  background-color: #ffffff;
  border-top: 2rpx solid #e5e7eb;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  padding: 16rpx 32rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 64rpx;
}

.tab-icon {
  font-size: 46rpx;
  margin-bottom: 4rpx;
  line-height: 1;
  display: flex;
  justify-content: center;
  color: #9ca3af;
}

.camera-icon {
  font-size: 54rpx;
  line-height: 1;
  display: flex;
  justify-content: center;
  color: white;
}

.tab-text {
  font-size: 24rpx;
  margin-top: 4rpx;
  color: #9ca3af;
  font-weight: 400;
}

.tab-active .tab-icon,
.tab-active .tab-text {
  color: #3b82f6;
}

.tab-center {
  position: relative;
  width: 80rpx;
  margin-top: -60rpx;
}

.tab-center-button {
  width: 128rpx;
  height: 128rpx;
  background-color: #2563eb;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tab-text-primary {
  color: #3b82f6;
} 